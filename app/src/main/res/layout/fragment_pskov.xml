                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="670dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Таверна «Пожарка»"
                        android:layout_gravity="left"/>

                    <ImageButton
                        android:id="@+id/btn_rest_samovar"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="450dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/rest_samovar"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="450dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Ресторан «СамоВар»"
                        android:layout_gravity="left"/>


                    <ImageButton
                        android:id="@+id/btn_rest_my_history"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="230dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/rest_my_history"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="230dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Рестобар «Моя история»"
                        android:layout_gravity="left"/>

                    <ImageButton
                        android:id="@+id/btn_rest_primostie"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="890dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/rest_primostie"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="890dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Ресторан «Примостье»"
                        android:layout_gravity="left"/>
