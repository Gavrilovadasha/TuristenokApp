                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="890dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/izborsk"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="210dp"
                        android:layout_marginLeft="890dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Изборская крепость"/>

                </FrameLayout>
            </HorizontalScrollView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="650dp"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ACBD6F">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="25dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"
                        android:text="Отели"/>

                    <ImageButton
                        android:id="@+id/btn_hotel_pokrovskii"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/hotel_pokrovskii"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"
                        android:text="Отель «Покровский»"
                        android:layout_gravity="left"/>


                    <ImageButton
