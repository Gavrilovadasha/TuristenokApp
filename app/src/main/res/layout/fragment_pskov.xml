    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_vn"
    android:background="#FEF0D3"
    tools:context=".PskovFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="450dp"
                android:layout_height="315dp"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/pskovmain" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font"
                android:text="Псков"
                android:textColor="#3C5322"
                android:textSize="50dp"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:fontFamily="@font/font"
                android:textColor="@color/black"
                android:text="Достопримечательности"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:fillViewport="true"
                android:layout_marginTop="350dp"
                android:scrollbars="horizontal">


                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:background="#FEF0D3">

                    <ImageButton
                        android:id="@+id/btn_troitskii_sobor"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/svyat_sobor_pskov2"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="210dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Свято-Троицкий кафедральный собор"
                        android:layout_gravity="left"/>

                    <ImageButton
                        android:id="@+id/btn_xram_vas_na_gorke"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="230dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/xram_vas_na_gorke"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="210dp"
                        android:layout_marginLeft="230dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:text="Церковь Василия Великого на горке"/>

                    <ImageButton
                        android:id="@+id/btn_dovmont_city"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="450dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/dovmontcity"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="210dp"
