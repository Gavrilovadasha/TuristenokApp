                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="450dp"
                        android:background="@drawable/button_dostoprim"
                        android:src="@drawable/hotel_dvor_podznoeva"
