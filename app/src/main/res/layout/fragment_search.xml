<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF0D3"
    android:id="@+id/fragment_search"
    tools:context=".SearchFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="5dp"
        android:fillViewport="true"
        android:scrollbars="vertical">



    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <!-- Поле для ввода текста поиска -->
        <EditText
            android:id="@+id/search_input2"
            android:layout_width="355dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:hint="Поиск"
            android:textColorHint="#5C5252"
            android:padding="5dp"
            android:background="@drawable/search_background"
            android:inputType="text"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/VelikiyNovgorod"
            android:layout_width="354dp"
            android:layout_height="156dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/vn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:text="Великий
            Новгород"
            android:textSize="45dp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/Pskov"
            android:layout_width="354dp"
            android:layout_height="156dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/pskov"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="30dp"
            android:text="Псков"
            android:textSize="45dp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/SrarayaLadoga"
            android:layout_width="354dp"
            android:layout_height="156dp"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ladoga"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="30dp"
            android:text="Старая
            Ладога"
            android:textSize="45dp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/Rostov"
            android:layout_width="354dp"
            android:layout_height="156dp"
            android:layout_marginTop="640dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rostov"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="670dp"
            android:layout_marginLeft="30dp"
            android:text="Ростов
            Великий"
            android:textSize="45dp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:textColor="@color/white"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="800dp"/>

        </FrameLayout>
    </ScrollView>
</LinearLayout>