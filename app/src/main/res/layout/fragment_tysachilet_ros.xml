<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SofiiskiiSoborFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ViewPager2 для перелистывания изображений -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="410dp"
                android:layout_height="300dp" />

            <!-- Индикатор текущей фотографии -->
            <TextView
                android:id="@+id/indicator"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/back_image_item"
                android:text="1/4"
                android:textAlignment="center"
                android:fontFamily="@font/font"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Памятник Тысячелетию России"
                android:fontFamily="@font/font"
                android:textColor="@color/black"
                android:layout_marginTop="320dp"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="ИСТОРИЯ КРАЯ, ИСКУССТВО"
                android:fontFamily="@font/font"
                android:textColor="#A8A2AA"
                android:layout_marginTop="350dp"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/mapLinkTysRos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Открыть карту"
                android:textColor="#1791EA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/font"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="420dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="О достопримечательности"
                android:fontFamily="@font/font"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/landmarkDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="460dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/description"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"/>

        </FrameLayout>
    </ScrollView>
</FrameLayout>