<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="755dp"
    android:layout_marginTop="-35dp"
    android:layout_marginLeft="-10dp"
    android:layout_marginRight="-10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_profile"
    android:background="@drawable/profile_back"
    tools:context=".RegFragment">


    <ImageButton
        android:id="@+id/btn_avatar"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:background="@drawable/avatar_button"
        android:clipToOutline="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/user_name_display"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="100dp"
        android:text=""
        android:fontFamily="@font/font"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btn_my_routes"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#B47765"
        android:fontFamily="@font/font"
        android:text="Мои маршруты"
        android:textColor="#FEF0D3"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_favourites"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#E4A144"
        android:text="Избранное"
        android:fontFamily="@font/font"
        android:textColor="#FEF0D3"
        android:textSize="20dp"/>




    <TextView
        android:id="@+id/exit_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="687dp"
        android:layout_marginLeft="100dp"
        android:text="Выйти"
        android:fontFamily="@font/font"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"/>

</FrameLayout>