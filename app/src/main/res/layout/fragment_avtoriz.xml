<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_avtor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/avtor_back">

    <!-- Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="#5C5252"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email_avt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_style"
            android:hint="E-mail"
            android:textColor="@color/black"
            android:textColorHint="#5C5252"
            android:textSize="15sp"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="#5C5252"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_pass_avt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_style"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#5C5252"
            android:textSize="15sp"
            android:drawableStart="@drawable/baseline_admin_panel_settings_24"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Forgot password -->
    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login Button -->
    <Button
        android:id="@+id/btn_avt"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Войти"
        android:backgroundTint="#FEF0D3"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/font"
        app:cornerRadius="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/forgot_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- "Авторизация через" -->
    <TextView
        android:id="@+id/social_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Авторизация через"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_avt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- VK Button -->
    <ImageButton
        android:id="@+id/btn_vk_avt"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/img_btn_reg"
        android:scaleType="fitCenter"
        android:src="@drawable/vk"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/social_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Google Button -->
    <ImageButton
        android:id="@+id/btn_google_avt"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/img_btn_reg"
        android:scaleType="fitCenter"
        android:src="@drawable/google"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@id/btn_vk_avt"
        app:layout_constraintStart_toEndOf="@id/btn_vk_avt" />

    <!-- "Не зарегистрированы?" -->
    <TextView
        android:id="@+id/not_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не зарегистрированы?"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_vk_avt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sign up link -->
    <TextView
        android:id="@+id/txt_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_sign_up"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/not_registered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
