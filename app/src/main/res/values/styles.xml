<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Правильное объявление стиля -->
    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#666</item>
        <item name="colorControlActivated">#FFD700</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@drawable/slide_in</item>
        <item name="android:windowExitAnimation">@drawable/slide_out</item>
    </style>

    <style name="NoRippleBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <!-- Основной стиль для диалога -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/bezh</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/brown</item>
        <item name="android:background">@color/bezh</item>
    </style>

</resources>